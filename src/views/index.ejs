<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="#news">News</a>
      </div>
      
      <div>
        <h2>List Users Table:</h2>
        <div class="w3-container">
            <table class="w3-table-all w3-hoverable">
              <thead>
                <tr class="w3-light-grey">
                  <th>ID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Address</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <% for(let i=0; i < dataUser.length; i++) { %>
                <tr>
                  <td><%= dataUser[i].id %></td>
                  <td><%= dataUser[i].firstName %></td>
                  <td><%= dataUser[i].lastName %></td>
                  <td><%= dataUser[i].email %></td>
                  <td><%= dataUser[i].address %></td>
                  <td>
                    <button type="button">
                        <a href="/detail/user/<%=dataUser[i].id%>" >Detail</a>
                    </button>
                    <form action="/edit-user/<%=dataUser[i].id%>" method="GET">
                      <button type="submit">
                        Edit    
                    </button>
                    </form>
                    <form action="/delete-user" method="POST">
                      <input type="text" hidden value="<%=dataUser[i].id%>" name="userId">
                      <button  type="submit">
                        Delete
                    </button>
                    </form>
            
                </td>
                </tr>
             <% } %>
            </table>
          </div>
          <div class="create-user-container">
            <h3>Create New User:</h3>
            <form action="/create-new-user" method="POST">
            <div>
              <label for="firstName">First Name:</label>
              <input id="firstName" name="firstName" type="text">
            </div>
            <div>
              <label for="lastName">Last Name:</label>
              <input id="lastName" name="lastName" type="text">
            </div>
            <div>
              <label for="email">Email:</label>
              <input id="email" name="email" type="text">
            </div>
            <div>
              <label for="address">Address:</label>
              <input id="address" name="address" type="text">
            </div>
            <div>
              <button class="btn-submit" type="submit">Submit</button>
            </div>
          </form>
          </div>
      </div>
</body>
</html>